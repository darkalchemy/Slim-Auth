{% if has_message('status') %}
    <article class="message is-info">
        <div class="message-body">
            {% for msg in flash('status') %}
                <p>{{ msg }}</p>
            {% endfor %}
        </div>
    </article>
{% endif %}

{% if has_message('success') %}
