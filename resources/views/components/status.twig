        <div class="message-body">
            {% for msg in flash('success') %}
                <p>{{ msg }}</p>
            {% endfor %}
        </div>
    </article>
{% endif %}

{% if has_message('error') %}
    <article class="message is-danger">
        <div class="message-body">
            {% for msg in flash('error') %}
                <p>{{ msg }}</p>
            {% endfor %}
        </div>
    </article>
{% endif %}
