{
    "name": "darkalchemy/slim-auth",
    "type": "project",
    "description": "A Slim 4 skeleton with authentication",
    "keywords": [
        "slim-framework",
        "skeleton",
        "slim",
        "slim4"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.4.0",
        "ext-gettext": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "cartalyst/sentinel": "^3.0",
        "delight-im/i18n": "^1.0",
        "egulias/email-validator": "^2.1",
        "filips123/monolog-phpmailer": "^1.0",
        "fullpipe/twig-webpack-extension": "^3.1",
        "hellogerard/jobby": "^3.4",
        "illuminate/database": "^6.14",
        "illuminate/events": "^6.14",
        "middlewares/trailing-slash": "^2.0",
        "monolog/monolog": "^2.0",
        "nyholm/psr7": "^1.2",
        "nyholm/psr7-server": "^0.4.1",
        "odan/session": "^4.0",
        "php-di/slim-bridge": "^3.0",
        "phpmailer/phpmailer": "^6.1",
        "robmorgan/phinx": "^0.11.4",
        "selective/config": "^0.1.1",
        "slim/csrf": "^1.0",
        "slim/flash": "^0.4.0",
        "slim/http": "^1.0",
        "slim/slim": "^4.4",
        "slim/twig-view": "^3.0",
        "symfony/http-foundation": "^5.0",
        "vlucas/valitron": "^1.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "symfony/var-dumper": "^5.0",
        "zeuxisoo/slim-whoops": "^0.7.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        },
        "files": [
            "app/Utilities/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cleanup": [
            "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --show-progress=dots -vvv"
        ],
        "dump": [
            "composer dump-autoload -a"
        ],
        "post-install-cmd": [
            "composer dump-autoload -o"
        ],
        "post-update-cmd": [
            "composer dump-autoload -o"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('config/settings.example.php', 'config/settings.php');\""
        ],
        "migrate": [
            "vendor/bin/phinx migrate -c config/phinx.php -e default --ansi"
        ],
        "rollback": [
            "vendor/bin/phinx rollback -c config/phinx.php -e default --ansi -t 0"
        ],
        "compile": [
            "php bin/compile_twig.php"
        ],
        "translate": [
            "cp bin/i18n.sh .",
            "./i18n.sh en_US",
            "rm i18n.sh"
        ]
    }
}
